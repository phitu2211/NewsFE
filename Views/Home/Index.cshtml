@model Response<List<Post>>
@using NewsFE.Extensions;
@{
    ViewData["Title"] = "Tin tức 24h";
}


<section id="sliderSection">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="slick_slider" id="slide-show">
                <script>
					var slideShow = document.getElementById("slide-show");
					var titles = [
						'Giá vàng hôm nay 30/7: Tiếp tục vọt tăng "phi mã", nhà đầu tư tỏ ra thận trọng',
						"Phương Đông Vân Đồn đón đầu cơ hội từ ngành du lịch “không ngủ”",
						"Ngoạn mục Ngoại hạng Anh 2019/20: Fernandes của MU chưa hẳn tân binh hay nhất?",
						"Truyền dịch cứu hàng sưa đỏ tiền tỷ ở Hà Nội",
					];
					var id = [
					    "ed73fea8-022d-4781-b8fb-0761df013b29",
						"576b6e97-2ba1-4744-ba7f-252212031309",
						"3a915516-d89e-423f-93d8-44265eac60ff",
						"ea52f43a-89cc-4de9-bf6f-e030f83d9aac",
					];
					var images = [
						"https://cdn.24h.com.vn/upload/3-2020/images/2020-07-30/Gia-vang-hom-nay-30-7-Tiep-tuc-vot-tang-2-1596075089-445-width510height400.jpg",
						"https://cdn.24h.com.vn/upload/3-2020/images/2020-07-30/Phuong-dong-Van-don-don-dau-co-hoi-tu-nganh-du-lich-khong-ngu-kinh-doanh--1--1596098899-623-width660height440.jpg",
						"https://cdn.24h.com.vn/upload/3-2020/images/2020-07-29/0_gettyimages-1200362605-660-1595959120-277-width660height439.jpg",
						"https://cdn.24h.com.vn/upload/3-2020/images/2020-07-31/Co-dau-hieu-chet-kho-trong-boc-sat-hang-sua-do-tien-ty-o-Ha-Noi-duoc-truyen-dich-de-hoi-suc-2-1596164286-641-width750height500.jpg",
                    ];

                    function toSeoUrl(url) {
                        return url.toString()               // Convert to string
                            .normalize('NFD')               // Change diacritics
                            .replace(/[\u0300-\u036f]/g, '') // Remove illegal characters
                            .replace(/\s+/g, '-')            // Change whitespace to dashes
                            .toLowerCase()                  // Change to lowercase
                            .replace(/&/g, '-and-')          // Replace ampersand
                            .replace(/[^a-z0-9\-]/g, '')     // Remove anything that is not a letter, number or dash
                            .replace(/-+/g, '-')             // Remove duplicate dashes
                            .replace(/^-*/, '')              // Remove starting dashes
                            .replace(/-*$/, '');             // Remove trailing dashes
                    }

                    for (let index = 0; index < 4; index++) {
                        let href = "/post/" + toSeoUrl(titles[index]) + "-id=" + id[index];
                        slideShow.innerHTML += `<div class="single_iteam">
					        <a href="${href}"><img src="${images[index]}" alt="" /></a>
							<div class="slider_article">
								<h2>
									<a class="slider_tittle" href="${href}">
										${titles[index]}
									</a>
								</h2>
							</div>
						</div>`;
					}
                </script>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div class="latest_post">
                <h2><span>Tin tức mới nhất</span></h2>
                <div class="latest_post_container">
                    <ul class="latest_postnav" id="latest-post">
                        @for (int i = 0; i < 5; i++)
                        {
                            String href = "/post/" + Model.data[i].title.NonUnicode().FriendlyUrl() + "-id=" + Model.data[i].id;
                            <li>
                                <div class="media">
                                    <a href="@href" class="media-left"> <img alt="" src="@Model.data[i].urlImage"> </a>
                                    <div class="media-body">
                                        <a href="@href" class="catg_title">
                                            @Model.data[i].title
                                        </a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

